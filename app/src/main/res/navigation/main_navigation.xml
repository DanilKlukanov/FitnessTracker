<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_navigation"
    app:startDestination="@id/mainScreen">

    <fragment
        android:id="@+id/loginScreen"
        android:name="com.example.fitnesstracker.fragments.LoginScreen"
        android:label="LoginScreen" />
    <fragment
        android:id="@+id/mainScreen"
        android:name="com.example.fitnesstracker.fragments.MainScreen"
        android:label="MainScreen">
        <action
            android:id="@+id/action_mainScreen_to_registrationScreen"
            app:destination="@id/registrationScreen"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_mainScreen_to_loginScreen"
            app:destination="@id/loginScreen"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/registrationScreen"
        android:name="com.example.fitnesstracker.fragments.RegistrationScreen"
        android:label="RegistrationScreen" />
</navigation>